    .tile:hover { background-color: #8ee4af; }
    .question-box { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: #edf5e1; color: #05386b; padding: 40px; border-radius: 15px; width: 60%; }
